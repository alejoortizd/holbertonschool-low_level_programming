#include "holberton.h"
/**
 * print_diagonal - entry point
 * Descripton: print diagonal
 * @n: parametre to check
 * Return: void
 */
void print_diagonal(int n)
{
	int i = 0;
	int j = 0;

	for ( ; i < n; i++)
	{
		for ( ; j < i; j++)
			_putchar(' ');
		_putchar('\\');
		_putchar('\n');
		j = 0;
	}
}
